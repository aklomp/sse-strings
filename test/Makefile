CFLAGS  += -std=c99 -Wall -Wextra -Werror -pedantic
LDFLAGS +=

PROGS = \
  test_strlen \
  test_strcmp \
  test_strcmpeq \
  test_strcasecmpeq \

.PHONY: all test clean

# The default target rebuilds all tests and runs them:
test: clean all
	./test_strlen
	./test_strcmp
	./test_strcmpeq
	./test_strcasecmpeq

all: $(PROGS)

test_strlen: test_strlen.o strlen_sse2.o strlen_sse4.o sse_level.o
	$(CC) $(LDFLAGS) -o $@ $^

test_strcmp: test_strcmp.o strcmp_x64.o
	$(CC) $(LDFLAGS) -o $@ $^

test_strcmpeq: test_strcmpeq.o strcmpeq_x64.o strcmpeq_sse2.o strcmpeq_sse4.o sse_level.o
	$(CC) $(LDFLAGS) -o $@ $^

test_strcasecmpeq: test_strcasecmpeq.o strcasecmpeq_sse2.o sse_level.o
	$(CC) $(LDFLAGS) -o $@ $^

test_%.o: test_%.c
	$(CC) $(CFLAGS) -o $@ -c $^

str%.o: ../lib/str%.asm
	nasm -f elf64 -o $@ $^

sse_level.o: sse_level.c
	$(CC) $(CFLAGS) -o $@ -c $^

clean:
	rm -f *.o $(PROGS)
